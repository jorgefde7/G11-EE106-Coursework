import sqlite3

# Connect to databse
conn = sqlite3.connect("Inventory.db")

# Create a cursor
c = conn.cursor()

# Create a table, [Dataypes: INTEGER (ALL NUMBERS), REAL (W/ DECIMALS), TEXT]
c.execute("""CREATE TABLE IF NOT EXISTS Stock (
        Item_Name TEXT,
        Item_Quantity INTEGER,
        Price REAL,
        Weight REAL,
        Replacement_Time INTEGER
        )""")

