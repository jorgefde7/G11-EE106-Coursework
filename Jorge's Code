#How to View the inventory
def Stock():
    Stock = c.fetchall()
    for Stock in Stock:
        print(Stock[0], '\t\t\t\t', Stock[4])
    return

#Manager View of inventory#def ManView():
    
def ManView():   
    Stock = c.fetchall()
    for Stock in Stock:
        print(Stock[0],'\t', Stock[1], '\t', Stock[2], '\t' ,Stock[3], '\t', Stock[4], '\t',Stock[5], '\t' ,Stock[6])
    return
        
