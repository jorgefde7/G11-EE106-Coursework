            Update_Inventory.grid(row=13,column=4)
        else: 
            label2 = tkinter.Label(root, text="Incorrect Password")
            label2.grid(row=2,column=4)
        
        
        #creating the submit button
            
    Password = tkinter.Entry(root, width=20)
