            label5.grid(row=4,column=10)
            label6 = tkinter.Label(root, text="Next Shipment Due")
            label6.grid(row=4,column=11)
            conn.commit()
            c.close()
            conn.close()
        def Submit():
            def Add():
                conn = sqlite3.connect('Inventory.db')
                c = conn.cursor()
                c.execute("INSERT INTO Items VALUES(:name,:stock,:row,:shelf,:price,:weight,:next_shipment)",
                    { 
                        'name': name.get(),
                        'stock': stock.get(),
                        'row': row.get(),
                        'shelf': shelf.get(),
                        'price': price.get(),
                        'weight': weight.get(),
                        'next_shipment': next_shipment.get()
                    })
                conn.commit()
                c.close()
                conn.close()
                #removes from box so clear for next use
                name.delete(0,'end')
                stock.delete(0,'end')
                row.delete(0,'end')
                shelf.delete(0,'end')
                price.delete(0,'end')
                weight.delete(0,'end')
                next_shipment.delete(0,'end') 
    #inserting the values from the GUI into the SQlite database
            name = tkinter.Entry(root, width=30)
